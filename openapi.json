        "summary": "Lista zdenaca",
        "description": "Vraca paginiranu listu zdenaca uz opcionalne filtere.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maksimalan broj zapisa (1-200).",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 200,
              "default": 50
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pocetni pomak u listi.",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Globalni tekstualni filter.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "naziv_gc_id",
            "in": "query",
            "description": "Filtrira po gradskoj cetvrti (ID).",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "status_odrz",
            "in": "query",
            "description": "Filtrira po statusu odrzavanja.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "aktivan_da_ne",
            "in": "query",
            "description": "Filtrira po statusu aktivan/da-ne.",
            "schema": {
              "type": "string"
            }
          }
